{% if errors.mysql %}
    <div class="alert alert-danger" role="alert">
        Une erreur inconnu est survenue
    </div>
{% endif %}

<form action="" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="project-title">Titre du projet :</label>
        <input class="form-control" type="text" name="title" id="project-title" required value="{{ project.getTitle() }}">
    </div>
    <div class="row">
        <div class="form-group col-md">
            <label for="project-repo-link">lien du repository Github (facultatif) :</label>
            <input class="form-control" type="text" name="repoLink" id="project-repo-link" value="{{ project.getRepoLink() }}">
        </div>
        <div class="form-group col-md">
            <label for="project-link">Lien du projet :</label>
            <input class="form-control" type="text" name="link" id="project-link" value="{{ project.getLink() }}">
        </div>
    </div>
    <div class="form-group">
        <label for="project-creation-date">Date de cr√©ation du projet :</label>
        <input class="form-control" type="date" name="creationDate" id="project-creation-date" required value="{{ project.getCreationDate() }}">
    </div>
    <div class="form-group">
        <label for="project-image">Image du projet :</label>
        <input class="form-control-file" type="file" name="image" id="project-image">
    </div>
    <div class="form-group">
        <label for="project-description">Description du projet :</label>
        <textarea class="form-control" name="description" id="project-description" cols="30" rows="5">{{ project.getDescription() }}</textarea>
    </div>

    <button class="btn btn-primary">{{ submitText }}</button>
</form>
